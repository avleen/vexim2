#MAIN_TRUSTED_USERS = vexim

# enable TLS
#MAIN_TLS_ENABLE = true

# enable av scanner
#av_scanner = clamd:/var/run/clamav/clamd.ctl

# use spamassassing
#spamd_address = 127.0.0.1 783

